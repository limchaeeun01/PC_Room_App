<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainFragment"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/tableLayout"
        android:background="#EFEFEF"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:stretchColumns="*">

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/allBtn"
                android:backgroundTint="#360455"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/popularBtn"
                android:backgroundTint="#8131B3"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인기" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/riceBtn"
                android:backgroundTint="#8131B3"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="밥류" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/noodleBtn"
                android:backgroundTint="#8131B3"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="면류" />
        </TableRow>

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/snackBtn"
                android:backgroundTint="#8131B3"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="과자" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sideBtn"
                android:backgroundTint="#8131B3"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사이드" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/toppingBtn"
                android:backgroundTint="#8131B3"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="토핑" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/drinkBtn"
                android:backgroundTint="#8131B3"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="음료" />
        </TableRow>


    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEFEF">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/menu_recyclerview"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>



</LinearLayout>